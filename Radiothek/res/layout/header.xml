<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingLeft="10dp" >

    <com.technisat.radiotheque.genre.SquareImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo_actionbar"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/txt_account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView1"
        android:text="Florian Müllenstädt"
        android:textSize="16dp"
        android:textColor="@color/RadiothekBlueLight" />

    <TextView
        android:id="@+id/txt_account_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_account_name"
        android:layout_below="@+id/txt_account_name"
        android:text="Account bearbeiten"
        android:textColor="@color/RadiothekGrey"
        android:textSize="12dp" />

</RelativeLayout>