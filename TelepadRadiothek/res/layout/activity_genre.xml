<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GenreActivity" >

    <GridView
        android:id="@+id/gv_activity_genre_grid"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:horizontalSpacing="0dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="0dp"
        android:paddingBottom="60dp"
    	android:clipToPadding="false"
        tools:listitem="@layout/gridview_item" >
        
    </GridView>
	
    <fragment
        android:id="@+id/fg_genre_player"
        android:name="com.technisat.radiotheque.player.PlayerFragement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        tools:layout="@layout/fragment_player_fragement" />

</RelativeLayout>