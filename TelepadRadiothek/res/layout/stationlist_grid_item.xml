<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:paddingTop="15dp"
    android:paddingBottom="5dp"
    android:background="@color/RealWhite" >
    
    <ProgressBar
        android:id="@+id/pb_stationlist_item_spinner_grid"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingBottom="1dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="1dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_stationlist_item_stationlogo_grid"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:paddingBottom="1dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="1dp"
        android:layout_centerHorizontal="true"
        android:background="@color/RadiothekBlueLight"
        android:contentDescription="@null"
        android:src="@drawable/ic_default_station" />
	
    <ImageView
        android:id="@+id/iv_stationlist_item_pausebutton_grid"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:paddingBottom="1dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="1dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@null"
        android:visibility="gone" />
    
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_stationlist_item_stationlogo_grid"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_stationlist_item_stationname_grid"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/playerfragment.text.loading"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/RadiothekBlueLight"
            android:textStyle="bold" />
		
        <TextView
            android:id="@+id/tv_stationlist_item_stationgenre_grid"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/playerfragment.text.loading"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/RadiothekGrey" />
        
    </LinearLayout>

</RelativeLayout>
